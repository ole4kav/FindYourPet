<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.olgav.android.findyourpet.FoundActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost Pets List"
            android:textColor="#00f"
            android:id="@+id/textView5"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_gravity="center"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewFound"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add New To Found List"
            android:textColor="#00f"
            android:id="@+id/newFoundButton"
            android:layout_weight="5"
            android:onClick="newFoundBtnClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="#00f"
            android:id="@+id/searchFoundButton"
            android:layout_weight="5"
            android:onClick="searchFoundBtnClick"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>